{
    "name": "vscode-markuplint",
    "displayName": "markuplint",
    "description": "markuplint for VS Code",
    "version": "0.0.1",
    "publisher": "YusukeHirao",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:html"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "markuplint configuration",
            "properties": {
                "htmlhint.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Control whether markuplint is enabled for HTML files or not."
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "**/.markuplintrc*",
                "url": "https://raw.githubusercontent.com/YusukeHirao/markuplint/master/markuplint.schema.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "vscode-languageclient": "^3.5.0",
        "vscode-languageserver": "^3.5.0"
    }
}
