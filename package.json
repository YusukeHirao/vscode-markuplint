{
	"name": "vscode-markuplint",
	"displayName": "markuplint",
	"description": "markuplint for VS Code",
	"version": "1.5.0",
	"publisher": "yusukehirao",
	"license": "MIT",
	"repository": "git@github.com:YusukeHirao/vscode-markuplint.git",
	"icon": "media/icon.png",
	"galleryBanner": {
		"color": "#0071BC",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:vue",
		"onLanguage:jade",
		"onLanguage:svelte",
		"onLanguage:njk",
		"onLanguage:handlebars",
		"onLanguage:mustache",
		"onLanguage:ejs",
		"onLanguage:haml",
		"onLanguage:jstl"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "markuplint configuration",
			"properties": {
				"markuplint.enable": {
					"type": "boolean",
					"default": true,
					"description": "Control whether markuplint is enabled for HTML files or not."
				}
			}
		},
		"jsonValidation": [
			{
				"fileMatch": "**/{.markuplintrc,markuplintrc.json,markuplint.config.json,markuplint.json}",
				"url": "https://raw.githubusercontent.com/YusukeHirao/markuplint/master/markuplint.schema.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./",
		"dev": "tsc -watch -p ./"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"bracketSpacing": true
	},
	"devDependencies": {
		"@types/node": "12.7.12",
		"@types/vscode": "^1.39.0",
		"@typescript-eslint/eslint-plugin": "^3.5.0",
		"@typescript-eslint/parser": "^3.5.0",
		"eslint": "^7.3.1",
		"prettier": "^2.0.5",
		"typescript": "^3.6.4"
	},
	"dependencies": {
		"markuplint": "1.0.0-alpha.53",
		"vscode-languageclient": "^5.2.1",
		"vscode-languageserver": "^5.2.1"
	}
}
